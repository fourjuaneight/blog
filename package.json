{
  "name": "blog",
  "version": "1.7.2",
  "description": "Personal blog.",
  "scripts": {
    "build:chroma": "hugo gen chromastyles > assets/css/syntax.css",
    "build:prod": "run-p ts tw && hugo -e production --gc --minify && npm run post",
    "build": "hugo --debug -e local --gc --log --minify -v --verboseLog",
    "clean:node": "rm -rf node_modules",
    "clean": "rm -rf dist",
    "dev": "concurrently -n \"DEV,TW,TS\" -c \"#ff4088,#38bdf8,#3178c6\" \"hugo --disableFastRender --gc --ignoreCache --log --minify serve\" \"npm run tw -- --watch\" \"npm run ts:scripts -- --watch\"",
    "format": "prettier --write \"assets/**/*.{ts,js,css,scss}\"",
    "lint": "eslint --fix --no-error-on-unmatched-pattern \"assets/**/*.{ts,js}\"",
    "post": "go run scripts/postbuild.go",
    "serve": "serve dist",
    "start": "run-p ts && npm run dev",
    "ts:scripts": "esbuild assets/scripts/* --bundle --splitting --format=esm --outdir=assets/js",
    "ts:workers": "esbuild assets/workers/* --bundle --splitting --format=esm --outdir=assets",
    "ts": "run-p ts:scripts ts:workers",
    "tsc": "tsc",
    "tw": "tailwindcss --no-autoprefixer -i ./assets/css/tailwind.css -o ./assets/css/tw.css",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fourjuaneight/blog.git"
  },
  "author": "Juan Villela <juan@villela.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fourjuaneight/blog/issues"
  },
  "homepage": "https://github.com/fourjuaneight/blog#readme",
  "dependencies": {
    "flamethrower-router": "0.0.0-meme.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/register": "^7.15.3",
    "babel-loader": "^8.2.2",
    "browserslist": "^4.16.7",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.7",
    "esbuild": "^0.14.38",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "8.0.1",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.6.0",
    "postcss-cli": "^8.3.1",
    "postcss-preset-env": "^7.4.4",
    "prettier": "^2.2.1",
    "serve": "^12.0.1",
    "tailwindcss": "^3.0.24",
    "ts-node": "^9.1.1",
    "tsup": "^5.12.6",
    "typescript": "^4.1.3"
  },
  "browserslist": {
    "production": [
      ">3%",
      "not dead",
      "defaults",
      "safari >= 12.4",
      "ios >= 12.4",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.+(ts|css|scss)": [
      "npm run format"
    ],
    "*.ts": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
