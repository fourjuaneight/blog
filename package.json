{
  "name": "blog",
  "version": "1.0.0",
  "description": "👨🏽‍💻Personal blog.",
  "scripts": {
    "bookmarks": "ts-node --project tsconfig.node.json \"scripts/bookmarks-data.ts\"",
    "build": "hugo -e production --minify",
    "build:chrome": "hugo gen chromastyles > assets/css/syntax.css",
    "build:prod": "run-p bookmarks img shelf ts tw && hugo --minify && npm run clean-scripts",
    "clean": "rm -rf dist",
    "clean:node": "rm -rf node_modules",
    "clean-scripts": "ts-node --project tsconfig.node.json \"scripts/clean-scripts.ts\"",
    "tw": "tailwindcss --no-autoprefixer -i ./assets/css/tailwind.css -o ./assets/css/tw.css",
    "dev": "hugo --disableFastRender --minify serve",
    "format": "prettier --write \"assets/**/*.{ts,js,css,scss}\"",
    "img": "ts-node --project tsconfig.node.json \"scripts/images.ts\"",
    "lint": "eslint --fix --no-error-on-unmatched-pattern \"assets/**/*.{ts,js}\"",
    "og-images": "ts-node --project tsconfig.node.json \"scripts/og-images.ts\"",
    "ts": "esbuild assets/scripts/* --bundle --splitting --format=esm --outdir=assets/js",
    "serve": "serve dist",
    "shelf": "ts-node --project tsconfig.node.json \"scripts/shelf-data.ts\"",
    "social-images": "ts-node --project tsconfig.node.json \"scripts/social-images.ts\"",
    "start": "run-p bookmarks img shelf social-images ts && concurrently -n \"TS,DEV\" -c \"#3178c6,#38bdf8,#ff4088\" \"npm run ts -- --watch\" \"npm run dev\"",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fourjuaneight/blog.git"
  },
  "author": "Juan Villela <juan@villela.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fourjuaneight/blog/issues"
  },
  "homepage": "https://github.com/fourjuaneight/blog#readme",
  "dependencies": {
    "chalk": "^2.4.2",
    "dotenv": "^16.0.0",
    "glob": "^7.1.7",
    "idb": "^7.0.1",
    "isomorphic-fetch": "^3.0.0",
    "puppeteer": "^13.5.1",
    "replace-in-file": "^6.2.0",
    "sharp": "^0.27.1",
    "waait": "^1.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/register": "^7.15.3",
    "@types/glob": "^7.1.4",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/node": "^14.14.31",
    "@types/sharp": "^0.27.1",
    "babel-loader": "^8.2.2",
    "browserslist": "^4.16.7",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.7",
    "esbuild": "^0.14.27",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "serve": "^12.0.0",
    "tailwindcss": "^2.2.7",
    "ts-node": "^9.1.1",
    "tsup": "^4.13.1",
    "typescript": "^4.1.3"
  },
  "browserslist": {
    "production": [
      ">3%",
      "not dead",
      "defaults",
      "safari >= 12.4",
      "ios >= 12.4",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.+(ts|css|scss)": [
      "npm run format"
    ],
    "*.ts": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
